{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SendWhatsAppTemplate",
  "input": {
    "type": "object",
    "properties": {
      "contactId": { "type": "string", "minLength": 1 },
      "leadId": { "type": "string", "minLength": 1 },
      "phone": { "type": "string", "minLength": 5 },
      "templateName": { "type": "string", "minLength": 1 },
      "languageCode": { "type": "string", "minLength": 2 },
      "variables": {
        "type": "array",
        "items": { "type": "string" },
        "default": []
      }
    },
    "required": ["phone", "templateName", "languageCode"],
    "additionalProperties": false
  },
  "output": {
    "type": "object",
    "properties": {
      "conversationId": { "type": ["string", "null"] },
      "messageId": { "type": "string" },
      "status": { "type": ["string", "null"] }
    },
    "required": ["conversationId", "messageId", "status"],
    "additionalProperties": false
  }
}
