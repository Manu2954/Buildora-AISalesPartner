{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LeadLookup",
  "input": {
    "type": "object",
    "properties": {
      "leadId": {
        "type": "string",
        "minLength": 1
      },
      "contactId": {
        "type": "string",
        "minLength": 1
      }
    },
    "additionalProperties": false,
    "anyOf": [
      { "required": ["leadId"] },
      { "required": ["contactId"] }
    ]
  },
  "output": {
    "type": "object",
    "properties": {
      "leadId": { "type": "string" },
      "status": { "type": "string" },
      "intentScore": { "type": "integer" },
      "city": { "type": ["string", "null"] },
      "locality": { "type": ["string", "null"] },
      "propertyType": { "type": ["string", "null"] },
      "openConversationCount": { "type": "integer" },
      "latestConversationId": { "type": ["string", "null"] },
      "latestQuoteStatus": { "type": ["string", "null"] },
      "projectStage": { "type": ["string", "null"] },
      "contacts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "contactId": { "type": "string" },
            "role": { "type": ["string", "null"] },
            "hasWhatsappOptIn": { "type": "boolean" },
            "dndFlag": { "type": "boolean" }
          },
          "required": ["contactId", "hasWhatsappOptIn", "dndFlag"],
          "additionalProperties": false
        }
      }
    },
    "required": [
      "leadId",
      "status",
      "intentScore",
      "openConversationCount",
      "latestConversationId",
      "latestQuoteStatus",
      "projectStage",
      "contacts"
    ],
    "additionalProperties": false
  }
}
